from launch import LaunchDescription
from launch_ros.actions import Node

def generate_launch_description():
    return LaunchDescription([
        # Первая черепаха
        Node(
            package='turtlesim',
            executable='turtlesim_node',
            name='turtle1'
        ),

        # Вторая черепаха
        Node(
            package='turtlesim',
            executable='turtlesim_node',
            name='turtle2'
        ),

        # Третья черепаха
        Node(
            package='turtlesim',
            executable='turtlesim_node',
            name='turtle3'
        ),

        # mimic: turtle2 следует за turtle1
        Node(
            package='turtlesim',
            executable='mimic',
            name='mimic12',
            remappings=[
                ('/input/pose', '/turtle1/pose'),
                ('/output/cmd_vel', '/turtle2/cmd_vel')
            ]
        ),

        # mimic: turtle3 следует за turtle2
        Node(
            package='turtlesim',
            executable='mimic',
            name='mimic23',
            remappings=[
                ('/input/pose', '/turtle2/pose'),
                ('/output/cmd_vel', '/turtle3/cmd_vel')
            ]
        )
    ])
