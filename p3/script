# ==> Ex01 — Написание простого сервиса и клиента <==
colcon build --packages-select fullname_interfaces
colcon build --packages-select service_full_name

ros2 run service_full_name service
ros2 run service_full_name client a b c


# ==> Ex02 — Запись и воспроизведение данных <==
cd ~/ros2_ws/src
git clone https://github.com/ros/ros_tutorials.git

в файле ros_tutorials/turtlesim/src/turtle_frame.cpp поменял строку на setFixedSize(800, 800);

cd ~/ros2_ws
colcon build --packages-select turtlesim_msgs
colcon build --packages-select turtlesim
source install/setup.bash

#
ros2 run turtlesim turtlesim_node
ros2 run turtlesim turtle_teleop_key
ros2 bag record -o turtle_cmd_vel --storage mcap /turtle1/cmd_vel

#
ros2 run turtlesim turtlesim_node
ros2 topic echo /turtle1/pose > pose_speed_x1.yaml
ros2 bag play turtle_cmd_vel.mcap


# ==> Ex03 — Работа с инструментом ros2 doctor <==
ros2 run turtlesim turtlesim_node
ros2 run turtlesim turtle_teleop_key

ros2 doctor --report > full_report.txt


# ==> Ex04 — Навигация по вики ROS <==
colcon build --packages-select move_to_goal

ros2 run turtlesim turtlesim_node
ros2 run move_to_goal move_to_goal 7.0 5.0 0.0


# ==> Ex05 — Написание простого сервера действий и клиента действий <==
colcon build --packages-select action_cleaning_robot_interfaces --packages-ignore turtlesim
colcon build --packages-select action_cleaning_robot --packages-ignore turtlesim

ros2 run action_cleaning_robot cleaning_action_server
ros2 run action_cleaning_robot cleaning_action_client
